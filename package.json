{
  "name": "unicast",
  "version": "1.0.0",
  "description": "Unicast implementation of UDP Datagram sockets.",
  "main": "index.js",
  "scripts": {
    "lint": "xo",
    "cover": "jest --coverage",
    "test": "npm run lint && jest",
    "test-ci": "npm run lint && npm run cover"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/reklatsmasters/unicast.git"
  },
  "keywords": [
    "dgram",
    "udp",
    "stream",
    "unicast",
    "one-to-one",
    "one2one"
  ],
  "author": "Dmitriy Tsvettsikh <me@reklatsmasters.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/reklatsmasters/unicast/issues"
  },
  "homepage": "https://github.com/reklatsmasters/unicast#readme",
  "engines": {
    "node": ">=8"
  },
  "xo": {
    "semicolon": false,
    "space": 2,
    "rules": {
      "object-curly-spacing": [
        "error",
        "always"
      ]
    },
    "ignores": [
      "**/test/**"
    ]
  },
  "jest": {
    "modulePaths": [
      "<rootDir>"
    ],
    "testRegex": "test/(.*)\\.js$",
    "coverageDirectory": "<rootDir>/coverage",
    "coveragePathIgnorePatterns": [
      "/test/"
    ]
  },
  "devDependencies": {
    "jest": "^22.1.4",
    "xo": "^0.18.2"
  },
  "dependencies": {
    "denque": "^1.2.2"
  }
}
